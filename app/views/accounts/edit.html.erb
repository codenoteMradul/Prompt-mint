<div class="mx-auto w-full max-w-3xl">
  <div class="mb-6">
    <%= link_to "← Back to account", account_path, class: "text-sm text-slate-400 hover:text-white transition-colors duration-300" %>
    <h1 class="mt-3 text-2xl font-semibold tracking-tight text-white">Edit account</h1>
    <p class="mt-1 text-sm text-slate-400">Update your personal info, security, and public profile.</p>
  </div>

  <div class="rounded-3xl border border-white/10 bg-white/[0.04] p-6 shadow-[0_0_0_1px_rgba(255,255,255,0.03)] backdrop-blur">
    <%= form_with model: @user, url: account_path, method: :patch do |form| %>
      <% if @user.errors.any? %>
        <div class="mb-6 rounded-2xl border border-rose-500/20 bg-rose-500/10 px-4 py-3 text-sm text-rose-100">
          <div class="font-semibold"><%= pluralize(@user.errors.count, "error") %> prevented saving:</div>
          <ul class="mt-2 list-disc pl-5 text-rose-100/90">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-8">
        <section>
          <h2 class="text-sm font-semibold tracking-wide text-white">Personal Info</h2>
          <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div class="relative">
              <%= form.text_field :name, required: true, class: "peer w-full rounded-2xl border border-white/10 bg-black/30 px-4 pb-3 pt-6 text-sm text-white placeholder-transparent outline-none transition-all duration-300 focus:border-cyan-400/40 focus:ring-4 focus:ring-cyan-400/10", placeholder: "Name" %>
              <%= form.label :name, "Name", class: "pointer-events-none absolute left-4 top-2 text-xs font-medium tracking-wide text-slate-400 transition-all duration-300 peer-placeholder-shown:top-4 peer-placeholder-shown:text-sm peer-placeholder-shown:text-slate-500 peer-focus:top-2 peer-focus:text-xs peer-focus:text-cyan-200" %>
            </div>

            <div class="relative">
              <%= form.telephone_field :phone, required: true, inputmode: "numeric", pattern: "\\d*", autocomplete: "tel", data: { controller: "phone-input", action: "input->phone-input#sanitize paste->phone-input#sanitize" }, class: "peer w-full rounded-2xl border border-white/10 bg-black/30 px-4 pb-3 pt-6 text-sm text-white placeholder-transparent outline-none transition-all duration-300 focus:border-fuchsia-400/40 focus:ring-4 focus:ring-fuchsia-400/10", placeholder: "14155552671" %>
              <%= form.label :phone, "Phone", class: "pointer-events-none absolute left-4 top-2 text-xs font-medium tracking-wide text-slate-400 transition-all duration-300 peer-placeholder-shown:top-4 peer-placeholder-shown:text-sm peer-placeholder-shown:text-slate-500 peer-focus:top-2 peer-focus:text-xs peer-focus:text-fuchsia-200" %>
              <p class="mt-2 text-xs text-slate-500">Numbers only (7–15 digits).</p>
            </div>

            <div class="relative sm:col-span-2">
              <%= form.select :country, country_options_for_select, { include_blank: "Select country" }, required: true, class: "peer w-full appearance-none rounded-2xl border border-white/10 bg-black/30 px-4 pb-3 pt-6 text-sm text-white outline-none transition-all duration-300 focus:border-pink-400/40 focus:ring-4 focus:ring-pink-400/10" %>
              <%= form.label :country, "Country", class: "pointer-events-none absolute left-4 top-2 text-xs font-medium tracking-wide text-slate-400" %>
            </div>
          </div>
        </section>

        <div class="h-px w-full bg-white/10"></div>

        <section>
          <h2 class="text-sm font-semibold tracking-wide text-white">Security</h2>
          <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div class="relative sm:col-span-2">
              <%= form.email_field :email, required: true, autocomplete: "email", class: "peer w-full rounded-2xl border border-white/10 bg-black/30 px-4 pb-3 pt-6 text-sm text-white placeholder-transparent outline-none transition-all duration-300 focus:border-cyan-400/40 focus:ring-4 focus:ring-cyan-400/10", placeholder: "Email" %>
              <%= form.label :email, "Email", class: "pointer-events-none absolute left-4 top-2 text-xs font-medium tracking-wide text-slate-400 transition-all duration-300 peer-placeholder-shown:top-4 peer-placeholder-shown:text-sm peer-placeholder-shown:text-slate-500 peer-focus:top-2 peer-focus:text-xs peer-focus:text-cyan-200" %>
            </div>

            <div class="relative">
              <%= form.password_field :password, autocomplete: "new-password", class: "peer w-full rounded-2xl border border-white/10 bg-black/30 px-4 pb-3 pt-6 text-sm text-white placeholder-transparent outline-none transition-all duration-300 focus:border-fuchsia-400/40 focus:ring-4 focus:ring-fuchsia-400/10", placeholder: "New password" %>
              <%= form.label :password, "New password", class: "pointer-events-none absolute left-4 top-2 text-xs font-medium tracking-wide text-slate-400 transition-all duration-300 peer-placeholder-shown:top-4 peer-placeholder-shown:text-sm peer-placeholder-shown:text-slate-500 peer-focus:top-2 peer-focus:text-xs peer-focus:text-fuchsia-200" %>
              <p class="mt-2 text-xs text-slate-500">Leave blank to keep your current password (min 8 characters if set).</p>
            </div>

            <div class="relative">
              <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "peer w-full rounded-2xl border border-white/10 bg-black/30 px-4 pb-3 pt-6 text-sm text-white placeholder-transparent outline-none transition-all duration-300 focus:border-pink-400/40 focus:ring-4 focus:ring-pink-400/10", placeholder: "Confirm password" %>
              <%= form.label :password_confirmation, "Confirm password", class: "pointer-events-none absolute left-4 top-2 text-xs font-medium tracking-wide text-slate-400 transition-all duration-300 peer-placeholder-shown:top-4 peer-placeholder-shown:text-sm peer-placeholder-shown:text-slate-500 peer-focus:top-2 peer-focus:text-xs peer-focus:text-pink-200" %>
            </div>
          </div>
        </section>

        <div class="h-px w-full bg-white/10"></div>

        <section>
          <h2 class="text-sm font-semibold tracking-wide text-white">Public Profile Info</h2>
          <div class="mt-4 grid grid-cols-1 gap-4">
            <div class="relative">
              <%= form.number_field :years_of_experience, min: 0, step: 1, class: "peer w-full rounded-2xl border border-white/10 bg-black/30 px-4 pb-3 pt-6 text-sm text-white placeholder-transparent outline-none transition-all duration-300 focus:border-emerald-400/40 focus:ring-4 focus:ring-emerald-400/10", placeholder: "Years of experience" %>
              <%= form.label :years_of_experience, "Years of experience", class: "pointer-events-none absolute left-4 top-2 text-xs font-medium tracking-wide text-slate-400 transition-all duration-300 peer-placeholder-shown:top-4 peer-placeholder-shown:text-sm peer-placeholder-shown:text-slate-500 peer-focus:top-2 peer-focus:text-xs peer-focus:text-emerald-200" %>
            </div>

            <div class="relative">
              <%= form.text_area :profile_description, rows: 5, class: "peer w-full rounded-2xl border border-white/10 bg-black/30 px-4 pb-3 pt-6 text-sm text-white placeholder-transparent outline-none transition-all duration-300 focus:border-fuchsia-400/40 focus:ring-4 focus:ring-fuchsia-400/10", placeholder: "Profile description" %>
              <%= form.label :profile_description, "Profile description", class: "pointer-events-none absolute left-4 top-2 text-xs font-medium tracking-wide text-slate-400 transition-all duration-300 peer-placeholder-shown:top-4 peer-placeholder-shown:text-sm peer-placeholder-shown:text-slate-500 peer-focus:top-2 peer-focus:text-xs peer-focus:text-fuchsia-200" %>
            </div>
          </div>
        </section>
      </div>

      <div class="mt-8 flex flex-col gap-3 sm:flex-row sm:items-center">
        <%= form.submit "Save changes", class: "inline-flex w-full items-center justify-center rounded-2xl bg-gradient-to-r from-fuchsia-500 via-pink-500 to-cyan-400 px-4 py-3 text-sm font-semibold text-black shadow-[0_0_30px_rgba(217,70,239,0.25)] hover:shadow-[0_0_40px_rgba(34,211,238,0.25)] transition-all duration-300 sm:w-auto" %>
        <%= link_to "Cancel", account_path, class: "inline-flex w-full items-center justify-center rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-sm font-medium text-slate-100 hover:bg-white/10 transition-all duration-300 sm:w-auto" %>
      </div>
    <% end %>
  </div>
</div>
