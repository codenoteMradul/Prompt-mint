<div class="mb-8">
  <h1 class="text-2xl font-semibold tracking-tight text-white">My Purchases</h1>
  <p class="mt-1 text-sm text-slate-400">Your unlocked bundles, ready to use.</p>
</div>

<% if @purchases.empty? %>
  <div class="rounded-2xl border border-white/10 bg-white/[0.04] p-6 shadow-[0_0_0_1px_rgba(255,255,255,0.03)] backdrop-blur">
    <p class="text-sm text-slate-300">No purchases yet.</p>
    <p class="mt-2 text-sm text-slate-400">Explore the marketplace on your Dashboard to unlock bundles.</p>
  </div>
<% else %>
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <% @purchases.each do |purchase| %>
      <% bundle = purchase.bundle %>
      <%= render "shared/bundle_card", bundle:, unlocked: true, owner: false, show_removed_badge: true %>
    <% end %>
  </div>
<% end %>
