<% mine = message.sender_id == viewer_id %>
<div class="flex <%= mine ? "justify-end" : "justify-start" %>">
  <div class="<%= mine ? "bg-gradient-to-r from-fuchsia-500/20 via-pink-500/15 to-cyan-400/15 border-white/10" : "bg-black/20 border-white/10" %> max-w-[85%] rounded-2xl border px-4 py-3">
    <div class="whitespace-pre-wrap text-sm text-slate-100"><%= message.body %></div>
    <div class="mt-2 text-right text-xs text-slate-400"><%= message.created_at.strftime("%b %d, %H:%M") %></div>
  </div>
</div>

