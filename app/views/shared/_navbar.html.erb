<header class="sticky top-0 z-50">
  <div class="border-b border-white/10 bg-[#0f0f14]/60 backdrop-blur">
    <div class="mx-auto flex w-full max-w-6xl items-center justify-between px-4 py-4">
      <div class="flex items-center gap-6">
        <%= link_to "PromptMint", logged_in? ? dashboard_path : root_path, class: "text-lg font-semibold tracking-tight text-white" %>

        <% if logged_in? %>
          <nav class="hidden items-center gap-1 sm:flex">
            <%= link_to "Dashboard", dashboard_path, class: "rounded-xl px-3 py-2 text-sm text-slate-200 hover:bg-white/5 hover:text-white transition-all duration-300" %>
            <%= link_to "Sell Bundle", new_bundle_path, class: "rounded-xl px-3 py-2 text-sm text-slate-200 hover:bg-white/5 hover:text-white transition-all duration-300" %>
            <%= link_to "My Purchases", my_purchases_path, class: "rounded-xl px-3 py-2 text-sm text-slate-200 hover:bg-white/5 hover:text-white transition-all duration-300" %>
            <%= link_to messages_path, class: "group relative inline-flex items-center gap-2 rounded-xl px-3 py-2 text-sm text-slate-200 hover:bg-white/5 hover:text-white transition-all duration-300" do %>
              <span class="relative">
                <svg class="h-4 w-4 text-slate-300 group-hover:text-white" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <path d="M21 12a8.5 8.5 0 0 1-8.5 8.5c-1.5 0-2.9-.4-4.1-1.1L3 21l1.6-4.7A8.4 8.4 0 0 1 3.5 12 8.5 8.5 0 0 1 12 3.5 8.5 8.5 0 0 1 21 12Z" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/>
                </svg>
                <% if unread_message_count.positive? %>
                  <span class="absolute -right-2 -top-2 inline-flex h-5 min-w-5 items-center justify-center rounded-full bg-rose-500 px-1 text-[11px] font-bold text-white ring-2 ring-[#0f0f14]">
                    <%= unread_message_count %>
                  </span>
                <% end %>
              </span>
              <span>Messages</span>
            <% end %>
            <%= link_to "Account", account_path, class: "rounded-xl px-3 py-2 text-sm text-slate-200 hover:bg-white/5 hover:text-white transition-all duration-300" %>
          </nav>
        <% end %>
      </div>

      <div class="flex items-center gap-3">
        <% if logged_in? %>
          <span class="hidden text-sm text-slate-400 md:inline"><%= current_user.email %></span>
          <%= button_to "Logout", logout_path, method: :delete, form_class: "inline-flex", class: "rounded-2xl border border-white/10 bg-white/5 px-4 py-2 text-sm font-medium text-slate-100 hover:bg-white/10 transition-all duration-300" %>
        <% else %>
          <%= link_to "Log in", login_path, class: "rounded-2xl border border-white/10 bg-white/5 px-4 py-2 text-sm font-medium text-slate-100 hover:bg-white/10 transition-all duration-300" %>
          <%= link_to "Sign up", signup_path, class: "rounded-2xl bg-gradient-to-r from-fuchsia-500 via-pink-500 to-cyan-400 px-4 py-2 text-sm font-semibold text-black shadow-[0_0_25px_rgba(217,70,239,0.25)] hover:shadow-[0_0_35px_rgba(34,211,238,0.25)] transition-all duration-300" %>
        <% end %>
      </div>
    </div>

    <% if logged_in? %>
      <div class="mx-auto w-full max-w-6xl px-4 pb-4 sm:hidden">
        <nav class="flex gap-2">
          <%= link_to "Dashboard", dashboard_path, class: "flex-1 rounded-2xl border border-white/10 bg-white/5 px-3 py-2 text-center text-sm text-slate-200 hover:bg-white/10 transition-all duration-300" %>
          <%= link_to "Sell", new_bundle_path, class: "flex-1 rounded-2xl border border-white/10 bg-white/5 px-3 py-2 text-center text-sm text-slate-200 hover:bg-white/10 transition-all duration-300" %>
          <%= link_to "Purchases", my_purchases_path, class: "flex-1 rounded-2xl border border-white/10 bg-white/5 px-3 py-2 text-center text-sm text-slate-200 hover:bg-white/10 transition-all duration-300" %>
        </nav>
        <div class="mt-2">
          <div class="grid grid-cols-2 gap-2">
            <%= link_to messages_path, class: "relative block rounded-2xl border border-white/10 bg-white/5 px-3 py-2 text-center text-sm text-slate-200 hover:bg-white/10 transition-all duration-300" do %>
              <span class="inline-flex items-center justify-center gap-2">
                <span class="relative">
                  <svg class="h-4 w-4 text-slate-300" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M21 12a8.5 8.5 0 0 1-8.5 8.5c-1.5 0-2.9-.4-4.1-1.1L3 21l1.6-4.7A8.4 8.4 0 0 1 3.5 12 8.5 8.5 0 0 1 12 3.5 8.5 8.5 0 0 1 21 12Z" stroke="currentColor" stroke-width="1.5" stroke-linejoin="round"/>
                  </svg>
                  <% if unread_message_count.positive? %>
                    <span class="absolute -right-2 -top-2 inline-flex h-5 min-w-5 items-center justify-center rounded-full bg-rose-500 px-1 text-[11px] font-bold text-white ring-2 ring-[#0f0f14]">
                      <%= unread_message_count %>
                    </span>
                  <% end %>
                </span>
                Messages
              </span>
            <% end %>
            <%= link_to "Account", account_path, class: "block rounded-2xl border border-white/10 bg-white/5 px-3 py-2 text-center text-sm text-slate-200 hover:bg-white/10 transition-all duration-300" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</header>
