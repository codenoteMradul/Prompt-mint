<div class="mb-8 flex items-start justify-between gap-4">
  <div>
    <h1 class="text-2xl font-semibold tracking-tight text-white">Bundles</h1>
    <p class="mt-1 text-sm text-slate-400">Curated prompt bundles for deeper workflows.</p>
  </div>

  <%= link_to "Sell Bundle", new_bundle_path, class: "inline-flex rounded-2xl bg-gradient-to-r from-fuchsia-500 via-pink-500 to-cyan-400 px-4 py-2 text-sm font-semibold text-black shadow-[0_0_30px_rgba(217,70,239,0.25)] hover:shadow-[0_0_40px_rgba(34,211,238,0.25)] transition-all duration-300" %>
</div>

<div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
  <% @bundles.each do |bundle| %>
    <div class="group relative overflow-hidden rounded-2xl border border-white/10 bg-white/[0.04] p-5 shadow-[0_0_0_1px_rgba(255,255,255,0.03)] backdrop-blur transition-all duration-300 hover:border-white/20 hover:bg-white/[0.06]">
      <div class="flex items-start justify-between gap-3">
        <div class="min-w-0">
          <h2 class="truncate text-base font-semibold tracking-tight text-white"><%= bundle.title %></h2>
          <p class="mt-1 text-sm text-slate-300"><%= truncate(bundle.description.to_s, length: 120) %></p>
        </div>
        <div class="flex flex-none flex-col items-end gap-2">
          <span class="rounded-full border border-white/10 bg-white/5 px-2.5 py-1 text-xs text-slate-200"><%= bundle.category.titleize %></span>
          <span class="text-sm font-semibold text-white">$<%= bundle.price %></span>
        </div>
      </div>

      <div class="mt-4 flex items-center justify-between">
        <span class="text-xs text-slate-400"><%= bundle.prompts.size %> prompts</span>
        <%= link_to "View", bundle_path(bundle), class: "text-sm text-slate-300 hover:text-white transition-colors duration-300" %>
      </div>
    </div>
  <% end %>
</div>

